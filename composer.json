{
    "name": "szwtdl/framework",
    "description": "framework",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "pengjian",
            "email": "szpengjian@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-swoole": ">=4.4",
        "nikic/fast-route": "^1.3",
        "nesbot/carbon": "^2.62",
        "monolog/monolog": "^3.2",
        "pimple/pimple": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.4",
        "swoole/ide-helper": "^4.8",
        "mockery/mockery": "^1.5",
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpstan/phpstan": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "src/"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer test",
                "composer check-style",
                "composer fix-style"
            ],
            "pre-push": [
                "composer test",
                "composer fix-style"
            ]
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse --memory-limit=-1",
        "check-style": "php-cs-fixer fix --using-cache=no --diff --dry-run --allow-risky=yes --ansi",
        "fix-style": "php-cs-fixer fix --using-cache=no --allow-risky=yes --ansi",
        "test": "phpunit --colors"
    },
    "minimum-stability": "stable"
}
